<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Mdifier_Information">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:scrollbarStyle="outsideInset"
        android:theme="?attr/actionBarTheme"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="            Modifiez vos infos personnelle "
        app:titleMargin="5dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        ads:srcCompat="@drawable/line_fine"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar7"
        app:layout_constraintTop_toTopOf="@+id/toolbar7"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/Rt_P_parametre"
        android:layout_width="28dp"
        android:layout_height="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />







    <ScrollView
        android:layout_width="394dp"
        android:layout_height="731dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar7"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    Mes Information"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.22" />

            <TextView
                android:id="@+id/User_Name_M"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/sty_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#7E7E7E"
                android:textSize="20dp"
                android:text="tesye "
                android:layout_marginTop="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.297" />


            <TextView
                android:id="@+id/User_Mail_M"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/sty_text_view"
                android:clickable="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#7E7E7E"
                android:textSize="20dp"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.348" />

            <Button
                android:id="@+id/Btn_favorit2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/btn_blanc"
                android:gravity="fill_vertical"
                android:hapticFeedbackEnabled="false"
                android:text="     Favoris"
                android:textSize="17dp"
                android:layout_marginTop="18dp"
                android:textIsSelectable="false"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.452" />

            <Button
                android:id="@+id/Btn_User_Adress"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/btn_blanc"
                android:gravity="fill_vertical"
                android:hapticFeedbackEnabled="false"
                android:text="     Mon adresses"
                android:textSize="17dp"
                android:textIsSelectable="false"
                android:textAllCaps="false"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.558" />


            <Button
                android:id="@+id/Btn_nouveaux_passe"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/btn_blanc"
                android:gravity="fill_vertical"
                android:hapticFeedbackEnabled="false"
                android:text="     Nouveau mot de passe"
                android:textSize="17dp"
                android:textIsSelectable="false"
                android:textAllCaps="false"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.664" />


            <TextView
                android:id="@+id/userAdresV1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="66dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.793" />

            <TextView
                android:id="@+id/UserAdresV2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.859" />

            <TextView
                android:id="@+id/Ville"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.917" />



            <TextView
                android:id="@+id/Codeposte"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.978" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>









